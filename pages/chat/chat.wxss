/* pages/chat/chat.wxss */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.chat-area {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 20rpx;
}

.user-message {
  justify-content: flex-end;
}

.ai-message {
  justify-content: flex-start;
}

.message-content {
  max-width: 80%;
  padding: 20rpx;
  border-radius: 12rpx;
  position: relative;
}

.user-content {
  background-color: #95ec69;
  color: #333;
  border-bottom-right-radius: 4rpx;
}

.ai-content {
  background-color: #fff;
  color: #333;
  border-bottom-left-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.ai-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.ai-avatar {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.ai-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.message-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
  text-align: right;
}

.system-message {
  text-align: center;
  margin: 40rpx 0;
}

.system-text {
  font-size: 28rpx;
  color: #999;
  background-color: #f0f0f0;
  padding: 20rpx 40rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.loading-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07c160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 打字指示器 */
.typing-indicator {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.typing-dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #999;
  border-radius: 50%;
  animation: typing 1.4s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 60%, 100% {
    transform: translateY(0);
  }
  30% {
    transform: translateY(-10rpx);
  }
}

.typing-indicator-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.typing-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.input-area {
  background-color: #fff;
  border-top: 1rpx solid #eee;
  padding: 20rpx;
}

.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.status-indicator {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.status-indicator.connected {
  background-color: #07c160;
}

.status-indicator.disconnected {
  background-color: #999;
}

.status-indicator.status-idle {
  background-color: #666666;
}

.status-indicator.status-connecting {
  background-color: #ff9500;
}

.status-indicator.status-listening {
  background-color: #07c160;
}

.status-indicator.status-speaking {
  background-color: #2b85e4;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.emotion-emoji {
  font-size: 28rpx;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.input-wrapper {
  flex: 1;
  position: relative;
}

.text-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background-color: #f5f5f5;
}

.text-input:focus {
  border-color: #07c160;
  background-color: #fff;
}

.send-button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  transition: all 0.3s;
}

.send-button.active {
  background-color: #06ae56;
}

.send-button:active {
  transform: scale(0.95);
}

.action-buttons {
  display: flex;
  justify-content: space-around;
}

.action-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.action-icon {
  font-size: 32rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}